{
  "name": "ai-code-reviewer",
  "displayName": "AI Code Reviewer",
  "version": "0.0.1",
  "description": "Offline-first code review with AI enhancement. Fast rule-based analysis with optional AI-powered insights for comprehensive code quality feedback.",
  "main": "./out/extension.js",
  "engines": {
    "vscode": "^1.80.0"
  },
  "activationEvents": [],
  "contributes": {
    "commands": [
      {
        "command": "aiCodeReviewer.reviewFile",
        "title": "AI: Review Current File"
      },
      {
        "command": "aiCodeReviewer.reviewWorkspace",
        "title": "AI: Review Workspace"
      }
    ],
    "configuration": {
      "title": "AI Code Reviewer",
      "properties": {
        "aiCodeReviewer.openaiApiKey": {
          "type": "string",
          "default": "",
          "description": "OpenAI API key for AI-powered code analysis. Optional - extension works offline with rule-based reviews.",
          "scope": "machine"
        },
        "aiCodeReviewer.openaiModel": {
          "type": "string",
          "default": "gpt-4o-mini",
          "description": "OpenAI model for AI code review (gpt-4o-mini, gpt-4, gpt-3.5-turbo, etc.)"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "vscode:prepublish": "npm run compile"
  },
  "devDependencies": {
    "@types/node": "^25.0.2",
    "@types/node-fetch": "^2.6.13",
    "typescript": "^5.9.3",
    "vscode": "^1.1.37"
  },
  "dependencies": {
    "node-fetch": "^2.7.0",
    "openai": "^6.13.0"
  }
}
